{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Issn</th>
                <th>Name</th>
                <th>Status</th>
                <th>Customer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.issn }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.status }}</td>
                <td><a href="{{ path('customer_show', {'uuid': product.customer.uuid}) }}">{{ product.customer.firstname }} {{ product.customer.lastName }}</a></td>
                <td>
                    <a href="{{ path('product_show', {'uuid': product.customer.uuid, 'issn': product.issn}) }}">show</a>
                    <a href="{{ path('product_edit', {'uuid': product.customer.uuid, 'issn': product.issn}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new', {'uuid': customer.uuid}) }}">Create new</a>
{% endblock %}
