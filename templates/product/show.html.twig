{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Issn</th>
                <td>{{ product.issn }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
            <tr>
                <th>Customer</th>
                <td><a href="{{ path('customer_show', {'uuid': product.customer.uuid}) }}">{{ product.customer.firstname }} {{ product.customer.lastName }}</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index', {'uuid': product.customer.uuid}) }}">back to list</a>

    <a href="{{ path('product_edit', {'uuid': product.customer.uuid, 'issn': product.issn}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
